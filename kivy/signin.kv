#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:include connect.kv
<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<Signin>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
          

    BoxLayout:
        size_hint_y: None
        height: 70
        canvas.before:
            Color:
                rgba: (0, 0, 1, 0.6)
            Rectangle:
                size: self.size
                pos: self.pos
               
        Label:
            text: "Admin Panel"
            bold: True
            size_hint_x: .9
        
    
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        Image:
            source: 'data/logo-foot.png'





    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 10
        #spacing: 10
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: username_field
                hint_text: "Username"
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            TextInput:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Sign In"
            size_hint_y: None
            height: 40
            background_color: (0,0,1, 0.6)
            background_normal: ''
            on_press: root.validate_user()
        Label:
            id: sp2

        

