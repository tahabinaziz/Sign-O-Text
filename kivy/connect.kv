#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<Connected>:

   
    
    canvas.before:
      
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'data/mm.png'


    
    BoxLayout:
        orientation: 'vertical'
       
        size_hint_y: None
        height: 70
        canvas.before:
            Color:
                rgba: (0, 0, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
               
       
        Button:
            text: "Start"
            size_hint_y: 0.4
            background_color: (0,0,1, 0.4)
            background_normal: ''
            height: 40
            paddin:10
           
            font_size: 24
            on_press: root.disconnect()
            